<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fxchatdemo.controllers.ServerMainController">
   <children>
      <Button fx:id="button_port" layoutX="237.0" layoutY="26.0" mnemonicParsing="false" onMouseClicked="#openThePort" prefHeight="23.0" prefWidth="90.0" text="设置" />
      <Button fx:id="button_send" layoutX="447.0" layoutY="264.0" mnemonicParsing="false" onMouseClicked="#sendTheMsg" prefWidth="61.0" text="发送" />
      <TextArea fx:id="textArea_message" layoutX="40.0" layoutY="264.0" prefHeight="86.0" prefWidth="402.0" wrapText="true" />
      <TextField fx:id="textField_port" layoutX="40.0" layoutY="26.0" prefHeight="23.0" prefWidth="174.0" promptText="监听端口号" text="8001" />
      <TextArea fx:id="textArea_reveive" editable="false" layoutX="40.0" layoutY="96.0" prefHeight="152.0" prefWidth="402.0" scrollTop="15.0" wrapText="true" />
      <Label fx:id="label_count" layoutX="40.0" layoutY="61.0" prefHeight="15.0" prefWidth="174.0" text="当前客户端连接数：" />
      <Label fx:id="label_status" layoutX="241.0" layoutY="61.0" prefHeight="15.0" prefWidth="190.0" text="当前状态：服务未开启" />
      <Button fx:id="button_save" layoutX="455.0" layoutY="96.0" mnemonicParsing="false" onMouseClicked="#pressToSave" prefHeight="23.0" prefWidth="90.0" text="保存消息记录" />
      <Button fx:id="button_decode" layoutX="455.0" layoutY="136.0" mnemonicParsing="false" onMouseClicked="#pressToDecode" prefHeight="23.0" prefWidth="90.0" text="解密消息记录" />
      <TextField fx:id="textField_password" layoutX="413.0" layoutY="26.0" promptText="口令" />
   </children>
</AnchorPane>
